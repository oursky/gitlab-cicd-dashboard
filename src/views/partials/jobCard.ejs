<a href="<%=job[current].web_url%>" target="_blank">
  <div class="<%=job[current].status%>-card flex flex-col mt-0.5 mx-0.5 sm:p-5 sm:h-26 p-1 min-h-0 w-auto border-solid border-1 text-gray-400 bg-gray-50 transition duration-100 hover:bg-gray-400">

    <div class="flex flex-row">
      <div class="flex flex-grow-0">Project:</div>
      <div class="flex flex-grow"></div>
      <div class="<%=job[current].status%>-id flex flex-grow-0"><%= job[current].project_name %></div>
    </div>

    <div class="flex flex-row">
      <div class="flex flex-grow-0">Job ID:</div>
      <div class="flex flex-grow"></div>
      <div class="<%=job[current].status%>-id flex flex-grow-0"><%= job[current].id %></div>
    </div>

    <div class="flex flex-row">
      <div class="flex flex-grow-0">Created At:</div>
      <div class="flex flex-grow"></div>
